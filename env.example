# =============================================
# CONFIGURAÇÕES DO AMBIENTE
# PetShop Romeo & Julieta
# =============================================

# =============================================
# SUPABASE CONFIGURATION
# =============================================
# Obtenha essas informações no painel do Supabase
# https://app.supabase.com/project/[seu-projeto]/settings/api
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-chave-anonima-aqui

# =============================================
# SENTRY CONFIGURATION (OPCIONAL)
# =============================================
# Para monitoramento de erros em produção
# https://sentry.io/
VITE_SENTRY_DSN=https://sua-dsn-do-sentry-aqui

# =============================================
# APP CONFIGURATION
# =============================================
# Versão da aplicação
VITE_APP_VERSION=1.0.0

# Modo de desenvolvimento (development, production, test)
VITE_NODE_ENV=development

# =============================================
# INTEGRAÇÕES EXTERNAS (FUTURAS)
# =============================================

# =============================================
# EMAIL CONFIGURATION
# =============================================
# Para envio de emails (SendGrid, SMTP, etc.)
VITE_EMAIL_PROVIDER=sendgrid
VITE_SENDGRID_API_KEY=sua-chave-sendgrid-aqui
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=seu-email@gmail.com
VITE_SMTP_PASSWORD=sua-senha-app

# =============================================
# PAGAMENTOS CONFIGURATION
# =============================================
# Stripe (Internacional)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_sua-chave-publica-stripe
VITE_STRIPE_SECRET_KEY=sk_test_sua-chave-secreta-stripe

# PagSeguro (Brasil)
VITE_PAGSEGURO_EMAIL=seu-email@pagseguro.com
VITE_PAGSEGURO_TOKEN=seu-token-pagseguro

# =============================================
# NOTIFICAÇÕES CONFIGURATION
# =============================================
# Twilio para SMS/WhatsApp
VITE_TWILIO_ACCOUNT_SID=sua-account-sid-twilio
VITE_TWILIO_AUTH_TOKEN=seu-auth-token-twilio
VITE_TWILIO_PHONE_NUMBER=+5511999999999

# =============================================
# STORAGE CONFIGURATION
# =============================================
# Cloudinary para otimização de imagens
VITE_CLOUDINARY_CLOUD_NAME=seu-cloud-name
VITE_CLOUDINARY_API_KEY=sua-api-key
VITE_CLOUDINARY_API_SECRET=sua-api-secret

# AWS S3 (alternativa)
VITE_AWS_ACCESS_KEY_ID=sua-access-key
VITE_AWS_SECRET_ACCESS_KEY=sua-secret-key
VITE_AWS_REGION=us-east-1
VITE_AWS_S3_BUCKET=seu-bucket-name

# =============================================
# ANALYTICS CONFIGURATION
# =============================================
# Google Analytics 4
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
VITE_GTM_ID=GTM-K2SDXNLP

# Mixpanel (alternativa)
VITE_MIXPANEL_TOKEN=sua-token-mixpanel

# =============================================
# MAPS CONFIGURATION
# =============================================
# Google Maps (para localização de clínicas)
VITE_GOOGLE_MAPS_API_KEY=sua-chave-google-maps

# =============================================
# CHAT CONFIGURATION
# =============================================
# Pusher para chat em tempo real
VITE_PUSHER_APP_ID=sua-app-id
VITE_PUSHER_KEY=sua-key
VITE_PUSHER_SECRET=sua-secret
VITE_PUSHER_CLUSTER=us2

# =============================================
# BACKUP CONFIGURATION
# =============================================
# Para backups automáticos
VITE_BACKUP_SCHEDULE=daily
VITE_BACKUP_RETENTION_DAYS=30

# =============================================
# SECURITY CONFIGURATION
# =============================================
# Configurações de segurança
VITE_SESSION_TIMEOUT=3600
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_PASSWORD_MIN_LENGTH=8

# =============================================
# FEATURE FLAGS
# =============================================
# Para habilitar/desabilitar funcionalidades
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_SUBSCRIPTIONS=true

# =============================================
# DEVELOPMENT CONFIGURATION
# =============================================
# Apenas para desenvolvimento
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
VITE_LOG_LEVEL=debug

# =============================================
# PRODUCTION CONFIGURATION
# =============================================
# Apenas para produção
VITE_CDN_URL=https://cdn.petshop.com
VITE_API_BASE_URL=https://api.petshop.com
VITE_APP_DOMAIN=petshop.com

# =============================================
# INSTRUÇÕES DE USO
# =============================================
# 1. Copie este arquivo para .env.local
# 2. Substitua os valores pelos seus dados reais
# 3. Nunca commite o arquivo .env.local
# 4. Para produção, configure as variáveis no seu provedor de deploy